<div class="btn-toolbar">
    <div class="btn-group">
    {% if view %}
        <a class="btn btn-primary"
           href="{{ path('carrera_read', {
            'id': entity.slug }) }}">Ver</a>
    {% endif %}
    {% if edit %}
        <a class="btn btn-default"
           href="{{ path('carrera_update_get', {
            'id': entity.slug }) }}">Editar</a>
    {% endif %}
{% if admin %}
    {% if entity.isEnabled %}
        <a class="btn btn-default"
           href="{{ path('carrera_disabled_get', {
            'id': entity.slug }) }}">Deshabilitar</a>
    {% else %}
        <a class="btn btn-default"
           href="{{ path('carrera_enabled_get', {
            'id': entity.slug }) }}">Habilitar</a>
    {% endif %}
{% endif %}
    {% if delete %}
        <a class="btn btn-default"
           href="{{ path('carrera_delete_get', {
            'id': entity.slug }) }}">Eliminar</a>
    {% endif %}
    </div>
    <div class="btn-group">
        {% if admin %}
            <a class="btn btn-default"
               href="{{ path('carrera_create_planestudio_get', {
                'id': entity.slug }) }}">Nuevo Plan de Estudio</a>
        {% endif %}
    </div>
</div>
