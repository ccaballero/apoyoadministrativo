{% extends 'CidetsiBaseBundle:Crud:read.html.twig' %}

{% block body %}
<section>
    <div class="container">
        {{ include('CidetsiBaseBundle:Block:flashbag.html.twig') }}
        <h1>{{ entity.name }}</h1>
        <p class="lead">{{ entity.facultad }}</p>
        {{ include('CidetsiDepartamentosBundle:Departamento:Tasks/element.html.twig', {
            'view': false,  'edit': true, 'delete': true
        }) }}
        <br />
        <ul class="nav nav-tabs">
            <li><a href="#home" data-toggle="tab">Informaci√≥n</a></li>
            <li class="active"><a href="#courses" data-toggle="tab">Materias</a></li>
            <li><a href="#teachers" data-toggle="tab">Docentes</a></li>
        </ul>
        <div class="tab-content">
            <div class="tab-pane" id="home">
                {{ include('CidetsiDepartamentosBundle:Departamento:_info.html.twig', {
                    'departamento': entity
                }) }}
            </div>
            <div class="tab-pane active" id="courses">
                {{ include('CidetsiMateriasBundle:Materia:list.departamento.html.twig', {
                    'departamento': entity
                }) }}
            </div>
            <div class="tab-pane" id="teachers">
                <table class="table table-striped">
                    <tr>
                        <th>Apellido Paterno</th>
                        <th>Apellido Materno</th>
                        <th>Nombres</th>
                        <th>Grupos</th>
                    </tr>
                {% for docente in docentes %}
                    <tr>
                        <td>{{ docente.apellidoPaterno }}</td>
                        <td>{{ docente.apellidoMaterno }}</td>
                        <td>{{ docente.nombres }}</td>
                        <td>{{ docente.grupos|length }}</td>
                    </tr>
                {% endfor %}
                </table>
            </div>
        </div>
    </div>
</section>
{% endblock %}
