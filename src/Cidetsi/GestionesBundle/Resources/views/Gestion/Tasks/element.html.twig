<div class="btn-toolbar" role="toolbar">
    <div class="btn-group">
        {% if view %}
            <a class="btn btn-primary"
               href="{{ path('departamento_read', {
                'id': entity.slug }) }}">Ver</a>
        {% endif %}
        {% if edit %}
            <a class="btn btn-default"
               href="{{ path('departamento_update_get', {
                'id': entity.slug }) }}">Editar</a>
        {% endif %}
    {% if admin %}
        {% if entity.isEnabled %}
            <a class="btn btn-default"
               href="{{ path('departamento_disabled_get', {
                'id': entity.slug }) }}">Deshabilitar</a>
        {% else %}
            <a class="btn btn-default"
               href="{{ path('departamento_enabled_get', {
                'id': entity.slug }) }}">Habilitar</a>
        {% endif %}
    {% endif %}
        {% if delete %}
            <a class="btn btn-default"
               href="{{ path('departamento_delete_get', {
                'id': entity.slug }) }}">Eliminar</a>
        {% endif %}
    </div>
</div>

