<br />
<div class="btn-group btn-group-sm">
    <button type="button" class="btn btn-default">Agregar</button>
</div>
<br />
<br />
<table class="table table-striped table-condenser table-bordered table-hover">
    <tr>
        <th>Apellido Paterno</th>
        <th>Apellido Materno</th>
        <th>Nombres</th>
        <th># Materias</th>
        <th># Grupos</th>
        <th>&nbsp;</th>
    </tr>
{% for docente in docentes %}
    <tr>
        <td>{{ docente.apellidoPaterno }}</td>
        <td>{{ docente.apellidoMaterno }}</td>
        <td>{{ docente.nombres }}</td>
        <td class="text-center">
            {{ docente.materias|length }}
        </td>
        <td class="text-center">{{ docente.grupos|length }}</td>
        <td class="text-center">
            <span class="glyphicon glyphicon-calendar"></span>
            <span class="glyphicon glyphicon-ok-circle"></span>
        </td>
    </tr>
{% endfor %}
</table>

