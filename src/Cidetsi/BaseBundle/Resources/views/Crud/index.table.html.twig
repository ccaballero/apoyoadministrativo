{% extends '::base.html.twig' %}

{% block breadcrumb %}
<ol class="breadcrumb">
    <li><span>{{ title_list }}</span></li>
</ol>
{% endblock %}

{% block body %}
<section>
    <div class="container">
        {{ include('CidetsiBaseBundle:Block:flashbag.html.twig') }}
        {% block preamble %}
            <h1>{{ title_list }}</h1>
        {% endblock %}
        <table class="table table-striped table-condensed table-bordered
                      table-hover">
        {% block headers %}{% endblock %}
        {% for entity in entities %}
            {% block items %}{% endblock %}
        {% else %}
            <tr><td>No se encontraron entidades.</td></tr>
        {% endfor %}
        <table>
    </div>
</section>
{% endblock %}

