{% extends '::base.html.twig' %}

{% block breadcrumb %}
<ol class="breadcrumb">
    <li><span>{{ title_list }}</span></li>
</ol>
{% endblock %}

{% block body %}
<section>
    <div class="container">
        {{ include('CidetsiBaseBundle:Block:flashbag.html.twig') }}
        {% block preamble %}
            <h1>{{ title_list }}</h1>
        {% endblock %}
        <div class="panel-group" id="accordion">
        {% for entity in entities %}
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h2 class="panel-title">
                        <a data-toggle="collapse" data-parent="#accordion"
                           href="#collapse{{ entity.ident }}">
                            {{ entity.name }}
                        </a>
                    </h2>
                </div>
                <div id="collapse{{ entity.ident }}"
                     class="panel-collapse collapse">
                    <div class="panel-body">
                        {% block items %}{% endblock %}
                    </div>
                </div>
            </div>
        {% endfor %}
        </div>
    </div>
</section>
{% endblock %}
