<div class="btn-toolbar">
    <div class="btn-group">
    {% if view %}
        <a class="btn btn-primary"
           href="{{ path('departamento_show', {
            'id': entity.id }) }}">Ver detalles</a>
    {% endif %}
    {% if edit %}
        <a class="btn btn-default"
           href="{{ path('departamento_edit', {
            'id': entity.id }) }}">Editar</a>
    {% endif %}
    {% if delete %}
        <a class="btn btn-default"
           href="{{ path('departamento_edit', {
            'id': entity.id }) }}">Eliminar</a>
    {% endif %}
    </div>
</div>